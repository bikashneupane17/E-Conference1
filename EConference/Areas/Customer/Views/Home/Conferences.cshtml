@{
    ViewData["Title"] = "Upcoming Conferences";
}

@model IEnumerable<Conference>

<br />
<div class="row">
    <div class="col-6">
        <h2 class="text-primary">Upcoming Conferences</h2>
    </div>
</div>
<br />
@if (Model != null)
{
    <div class="p-4 border rounded">
    <table id="tblData" class="table table-striped table-bordered" style="width:100%">
        <thead class="thead-dark">
            <tr class="table-info">
                <th>ID</th>
                <th>Conference Name</th>
                <th>Date</th>
                <th>Papers</th>
                <th>Options</th>
            </tr>
        </thead>
        <tbody>
                @foreach (Conference c in Model)
                {
                    <tr>
                        <td>@c.ID</td>
                        <td>@c.Name?.Name</td>
                        <td>@c.ScheduledDate</td>
                        <td>@(c.Papers?.Count ?? 0)</td>
                        <td align="center">
                            <a class="btn btn-info" asp-area="Admin" asp-controller="Conference" asp-action="ViewDetails" asp-route-id="@c.ID">Details</a>
                            @if (User.IsInRole(EConference.Utility.SD.Role_Admin) || User.IsInRole(EConference.Utility.SD.Role_Conference_Manager))
                            {
                                <a class="btn btn-danger" asp-area="Admin" asp-controller="Conference" asp-action="Delete" asp-route-id="@c.ID">Delete</a>
                            }
                        </td>
                    </tr>
                }
        </tbody>
    </table>
</div>
}

else
{
    <div class="row">
        <h3 class="text-info">There are not any <strong class="text-danger">Conferences schedueled</strong> at the moment.<br />
        Please stay tuned for <strong>Exciting New Conferences</strong>. Thank You!</h3>
    </div>
}

